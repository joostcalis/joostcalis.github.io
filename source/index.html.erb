---
pageable: true
per_page: 10
layout: index
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>
<div class="container-fluid">
  <div class= "row">
    <div class="col-md-12">
      <h1 class="welcome-header">Welcome to my Blog!</h1>
      <p class="welcome-header1">Read along on my way to becoming a Jr Developer</p>
    </div>
  </div>
  <div class= "row">
    <div class="col-md-10">
      <div class="container-fluid">
        <div class="row">
          <% page_articles.each_with_index do |article, i| %>
          <div class="col-md-6">
            <div class="main">
              <h2><%= link_to article.title, article %> </h2>
              <p><span><%= article.date.strftime('%b %e') %></span></p>
  <!-- use article.summary(250) if you have Nokogiri available to show just
       the first 250 characters -->
              <%= article.summary(75) %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-2">
      <div class="col-centered">
        <h2>Tags</h2>
        <ol>
          <% blog.tags.each do |tag, articles| %>
            <li><%= link_to "#{tag}", tag_path(tag) %></li>
          <% end %>
        </ol>
      </div>
    </div>
  </div>
</div>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
